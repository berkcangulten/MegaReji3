<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateorChangePostProReport"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/editTextCreatePostProNeed"
        android:layout_width="322dp"
        android:layout_height="203dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/textView2PostPro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1postpro" />

    <EditText
        android:id="@+id/editTextCreatePostProDone"
        android:layout_width="322dp"
        android:layout_height="133dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2PostPro" />

    <TextView
        android:id="@+id/textView1postpro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="23dp"
        android:text="What are your needs?"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextCreatePostProNeed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2PostPro"
        android:layout_width="322dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="23dp"
        android:text="Done:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextCreatePostProDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCreatePostProNeed" />
</android.support.constraint.ConstraintLayout>